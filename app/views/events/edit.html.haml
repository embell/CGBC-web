.section
  %h1 Edit Event
  = form_for @event do |f|
    .form-group
      = f.label 'Name', nil, class: 'control-label'
      = f.text_field :name, {class: 'form-control'}
    .form-group
      = f.label 'Date', nil, class: 'control-label'
      .form-group
        = f.date_select :date, {}, {class: 'form-control date-select'}
        .clearfix
    .form-group
      = f.label 'Description', nil, class: 'control-label'
      = f.text_area :description, rows: 4, class: 'form-control'
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Delete', event_path(@event), class: 'btn btn-danger',
              data: {method: 'DELETE', confirm: 'Are you really sure you want to delete this?'}
