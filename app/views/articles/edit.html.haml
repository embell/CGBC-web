.section
  %h1 Edit Article
  = form_for @article do |f|
    .form-group
      = f.label 'Title', nil, class: 'control-label'
      = f.text_field :title, {class: 'form-control'}
    .form-group
      = f.label 'Author', nil, class: 'control-label'
      = f.text_field :author, {class: 'form-control'}
    .form-group
      = f.label 'Text', nil, class: 'control-label'
      = f.text_area :text, rows: 16, class: 'form-control'
    .form-group
      = f.label 'Date', nil, class: 'control-label'
      .form-group
        = f.date_select :date, {}, {class: 'form-control date-select'}
        .clearfix
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Delete', article_path(@article), class: 'btn btn-danger', data: {method: 'DELETE'}
