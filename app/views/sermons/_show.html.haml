.section
  %h2.centered-with-lines= @sermon.title
  .sermon-info
    .sermon-info-chunk
      = "Speaker: #{@sermon.speaker.to_s}"
    .sermon-info-chunk
      = "Date: #{@sermon.date_string}"
    - unless @sermon.verses.nil?
      - verses = Pericope.parse(@sermon.verses)
      - verses.each do |verse|
        .sermon-info-chunk
          = verse
        
  .sermon-audio-container
    = audio_tag @sermon.audio_file.url, controls: true, class: 'sermon-audio', preload: 'metadata'
