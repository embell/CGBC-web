!!! 5
%html.full-bg
  %head 
    %title CGBC
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

    /
      [if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
      <![endif]

    = favicon_link_tag asset_path "favicon.ico"

  %body
    %header.navbar.navbar-static-top.navbar-inverse{:role => "banner"}
      .container
        = link_to :root, class: "navbar-brand img-brand" do
          = image_tag "logo.png", class: "img-responsive brand"
        %nav
          %ul.nav.navbar-nav.navbar-right
            %li= link_to "Admin",       'admin'
            %li= link_to "Sermons",     '#'
            %li= link_to "Newsletter",  'newsletter'
            %li= link_to "History",     'history'
            %li= link_to "Calendar",    '#'
            %li= link_to "Ministries",  '#'
            %li= link_to "Beliefs",     '#'
            %li= link_to "Contact",     '#'

    .container
      .center.clearfix
        = yield

    %footer
      .container
        %hr
        Copyright CGBC 2016
