.section
  %h1 Delete Newsletter
  - all_newsletters = Newsletter.all.sort.reverse.map { |nl| [nl.name, nl.id] }
  = form_for @newsletter, method: :delete do |f|
    = f.select :id, options_for_select(all_newsletters), class: 'form-control'
    = f.submit 'Delete', class: 'btn btn-danger', confirm: 'Are you really sure?'
