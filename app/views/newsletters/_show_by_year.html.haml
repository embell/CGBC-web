.section
  .newsletter-year-header
    %h2.centered-with-lines= year
  .row.newsletter-row
    - newsletters.sort.each do |n|
      .col-md-3.col-sm-6.newsletter-col
        = link_to n.document.url, {class: 'no-text-decoration'} do
          .btn.btn-info.clearfix.center-block.newsletter-grid-button
            = n.name.split.first
            %br
            = n.name.split.last
