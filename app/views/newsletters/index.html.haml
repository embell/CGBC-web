.section
  %h1 
    Newsletter  

  - Newsletter.all.reverse.each do |n| 
    %div
      = "Name: #{n.name}"
    %div
      = "Date: #{n.date}"
    %div
      = link_to "File", n.document.url unless n.document.file.nil?
    %hr

  .panel-group#accordion
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a{:data => {:toggle => 'collapse', :parent => '#accordion'}, :href => '#collapseOne'}
            2016
      .panel-collapse.collapse.in#collapseOne
        .panel-body
          - ["January", "February", "December"].each do |month|
            .col-md-3
              .panel.panel-default
                .panel-body
                  = month
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a{:data => {:toggle => 'collapse', :parent => '#accordion'}, :href => '#collapseTwo'}
            2015
      .panel-collapse.collapse#collapseTwo
        .panel-body
          - ["January", "February", "March", "April", "May", "June", "July"].each do |month|
            .col-md-3
              .panel.panel-default
                .panel-body
                  = month
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a{:data => {:toggle => 'collapse', :parent => '#accordion'}, :href => '#collapseThree'}
            2014
      .panel-collapse.collapse#collapseThree
        .panel-body
          - ["January", "February", "December"].each do |month|
            .col-md-3
              .panel.panel-default
                .panel-body
                  = month
